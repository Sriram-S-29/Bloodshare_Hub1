<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
        rel="stylesheet">
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Donor</title>
    <link rel="stylesheet" type="text/css" href="/Public/css/admincamp.css" />
</head>

<body>
     <div class="hed">
        <p>Total Donors : {{C_Tot}} &nbsp;&nbsp;&nbsp;&nbsp; |</p>&nbsp;
    </div><br>
    <div class="redbox">
        <div>
            <img class="himg" src="/Public/img/logonew.png" alt="logo" />
        </div>
        <div class="l">
            <a href="/admin/adminhome">Home</a>
            <div class="dropdown">
                <button class="dropbtn">Camp</button>
                <div class="dropdown-content">
                    <a href="/admin/admincamp">New</a>
                    <a href="/admin/adminCampDetail">Details</a>
                   
                </div>
            </div>
            <a href="/admin/adminDonor">Donor</a>
            <div class="dropdown">
                <button class="dropbtn">Request </button>
                <div class="dropdown-content">
                    <a href="/admin/adminRequest">New </a>
                    <a href="/admin/adminRequestManage">Manage </a>
                    <a href="/admin/admincampdetail"> Details</a>
                </div>
            </div>
             <div class="dropdown">
                <button class="dropbtn">Appointment </button>
                <div class="dropdown-content">
                    <a href="/admin/appointment">Manage</a>
                    <a href="#"> Details</a>
                </div>
            </div>
            </div>
            <div class="dropdown">
                <img  class="himg" src="/Public/img/h2.png" alt="profile">
                <div class="dropdown-content">
                   <a href="/admin/inventory">Inventery</a>
                <a href="/admin/">Logout</a>
                 </div>
            
            
        </div>
    </div>
    <div class="container">
        <div class="newCamp">
           <h1 >New Camp</h1>
           <form action="/admin/adminNewCamp" method="post">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date">
        
            <label for="district">District:</label>
            <input type="text" id="district" name="district">
        
            <label for="location">Address(Gmap):</label>
            <textarea id="location" name="place" rows="4" cols="50"></textarea>
        
            <label for="startTime">Starting Time:</label>
            <input type="time" id="startTime" name="startTime">
        
            <label for="endTime">Ending Time:</label>
            <input type="time" id="endTime" name="endTime">
        
            <label for="phno">Phone Number:</label>
            <input type="tel" id="phno" name="phno" placeholder="Enter your phone number">
        
            <input type="submit"   value="Send Mail">
        </form>
        
        </div>
       
    <div class="mail">
        <table>
            <tr>
                <th>Name</th>
                <th>District</th>
                <th>BloodGroup</th>
                <th>Last Donated</th>
                <th>Status</th>
            </tr>
            {{#each users}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.district}}</td>
                    <td>{{this.bloodGroup}}</td>
                    <td>{{this.last_donate}}</td>
                    <td>MAIL SENT</td>
                </tr>
            {{/each}}
        </table>
    </div>
    <div class="status">
        <h1 id="cmp">Camp Details</h1>
        <table>
            <tr>
                <th>Camp Id</th>
                <th>District</th>
                <th>Date</th>
            </tr>
            {{#each exCamp}}
                <tr>
                    <td>{{this.campId}}</td>
                    <td>{{this.district}}</td>
                    <td>{{this.date}}</td>
                </tr>
            {{/each}}
        </table>
    </div>
    </div>
    <script>
        const status = JSON.parse('{{status}}');
        if (status) {
    sweet();
            }

function sweet() {
    console.log("in sweet");
    Swal.fire({
        title: 'Success',
        text: "New Camp Added!",
        icon: 'success',
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'OK',
        timer: 3000
    });
}

    </script>

</html>